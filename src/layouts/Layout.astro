---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | 月ウサギのそだてかた 攻略</title>
  <meta name="description" content="月ウサギのそだてかた - 武器合成とガチャ分析ツール" />
</head>
<body class="bg-gray-50 text-gray-900">
  <div class="flex min-h-screen">
    <!-- サイドバー -->
    <aside class="w-64 bg-white border-r border-gray-200 fixed h-full">
      <div class="p-6">
        <h1 class="text-xl font-bold text-gray-800 mb-2">月ウサギのそだてかた</h1>
        <p class="text-sm text-gray-600">攻略ツール</p>
      </div>

      <nav class="px-4">
        <!-- ホーム -->
        <a
          href="/"
          class={`block px-4 py-2 rounded-md transition-colors ${
            currentPath === '/'
              ? 'bg-blue-50 text-blue-700 font-medium'
              : 'text-gray-700 hover:bg-gray-100'
          }`}
        >
          ホーム
        </a>

        <!-- 区切り線 -->
        <div class="border-t border-gray-200 my-3"></div>

        <!-- 武器セクション -->
        <div class="mb-2">
          <p class="px-4 py-1 text-xs font-semibold text-gray-500 uppercase tracking-wider">
            武器
          </p>
        </div>
        <ul class="space-y-1">
          <li>
            <a
              href="/weapons"
              class={`block px-4 py-2 rounded-md transition-colors ${
                currentPath === '/weapons'
                  ? 'bg-blue-50 text-blue-700 font-medium'
                  : 'text-gray-700 hover:bg-gray-100'
              }`}
            >
              武器図鑑
            </a>
          </li>
          <li>
            <a
              href="/goal"
              class={`block px-4 py-2 rounded-md transition-colors ${
                currentPath === '/goal'
                  ? 'bg-blue-50 text-blue-700 font-medium'
                  : 'text-gray-700 hover:bg-gray-100'
              }`}
            >
              目標計算
            </a>
          </li>
          <li>
            <a
              href="/gacha"
              class={`block px-4 py-2 rounded-md transition-colors ${
                currentPath === '/gacha'
                  ? 'bg-blue-50 text-blue-700 font-medium'
                  : 'text-gray-700 hover:bg-gray-100'
              }`}
            >
              ガチャシミュレータ
            </a>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- メインコンテンツ -->
    <main class="flex-1 ml-64 p-8">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">{title}</h2>
        <slot />
      </div>
    </main>
  </div>
</body>
</html>
